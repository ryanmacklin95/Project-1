<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Mobile_Phone_Format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(MobilePhone, &quot;\\D*?(\\d\\D*?){10}&quot;))</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Mobile phone number should be in this format: (000) 000-0000</errorMessage>
</ValidationRule>
